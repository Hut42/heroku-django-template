files:
    "/opt/elasticbeanstalk/tasks/taillogs.d/cloud-init.conf":
      mode: "000755"
      owner: root
      group: root
      content: |
        /var/log/cron
    "/etc/cron.d/ebcron":
        mode: "000644"
        owner: root
        group: root
        content: |
            */30 * * * * root source /opt/python/current/env && /opt/python/run/venv/bin/python3 /opt/python/current/app/manage.py check >> /var/log/cron

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/ebcron.bak"
